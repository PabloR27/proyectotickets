{% extends 'base.html.twig' %}

{% block title %}Mis incidencias{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .incidencia{ display: flex; justify-content: space-between; width: 300px; border-radius: 15px; margin-left: 5px;margin-right: 5px;margin-top: 5px;}
        .incidencias{ margin: 30px; display: flex; justify-content: center}

        
        html, body {
    height: 100%;
}
body {
    margin: 0;
    
    font-family: sans-serif;
    font-weight: 100;
}
.container {
    background: white;
    transform: translate(0%,0%);
}
table {
    
    width: 800px;
    border-collapse: collapse;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
}
th, td {
    padding: 15px;
   /* background-color: rgba(255,255,255,0.2);*/
    color: black;
}
th {
    text-align: left;
}
thead th {
    background-color: blue;
}
tbody tr:hover {
    background-color: rgba(49,68,191,0.3);
}
tbody td {
    position: relative;
}
tbody td:hover:before {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    top: -9999px;
    bottom: -9999px;
    background-color: rgba(49,68,191,0.3);
    z-index: -1;
}
td,tr{border: 1px solid blue}
.container{margin-top: 20px;}
    </style>

    {% if activos != null %}
        <div class="container">
            <table id="tabla" class="table">
                <thead class="bg-primary">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Más datos</th>
                    </tr>
                </thead>
                <tbody>
                    {% for activo in activos %}

                        <tr>
                            <td>{{ activo.nombre }}</td>
                            <td>{{ activo.descripcion }}</td>
                            <td><a href="{{path('detalleactivo', {'id':activo.id})}}">Más datos</a></td>
                        </tr>
                    {% endfor%}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="mensajeSinContenido">
            <div>
                <h2>No hay activos registrados</h2>
            </div>
        </div>
    {% endif %}

{% endblock %}
