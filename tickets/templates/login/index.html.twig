<title>{% block title %}Login{% endblock %}</title>
{% block stylesheets %}
    <link rel="icon" href="{{ asset('img/ticket.png') }}" type="image/x-icon"/>
{% endblock %}

{% block body %}
    <style>
        body {
            background: radial-gradient(ellipse farthest-corner at center top, #d8dbe2 0%, #a9bcd0 100%);
            height: 100vh;
            font-family: "Noto Sans", sans-serif;
            background: url("https://hd.unsplash.com/photo-1435777940218-be0b632d06db") no-repeat center center fixed; }

        .Modal {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(40, 75, 99, 0.8);
            background-size: cover;
            border-radius: 5px; }
        .Modal a {
            display: block;
            color: rgba(255, 255, 255, 0.7);
            font-size: 12px;
            text-align: center;
            text-decoration: none;
            margin: 4px 0 10px 0;
            margin: 10px; }
        .Modal a:hover {
            text-decoration: underline; }

        .Input {
            display: flex;
            flex-direction: row-reverse;
            align-items: center;
            border-bottom: 1px solid #58a4b0;
            margin: 0 20px; }
        .Input input {
            border: 0;
            background: transparent;
            padding: 2px 10px;
            margin: 18px 4px 0 4px;
            color: rgba(255, 255, 255, 0.7);
            font-family: "Noto Sans", sans-serif;
            font-size: 14px; }
        .Input input:required {
            box-shadow: none; }
        .Input input:focus ~ label {
            opacity: 1; }


        label {
            font-family: FontAwesome;
            color: white;
            font-size: 14px;
            margin-top: 17px;
            transition: opacity .3s ease-in-out; }
        label::before {
            padding: 5px 5px 0 0;
            opacity: 0.5; }

        form button {
            position: relative;
            margin: 15px 0 5px 0;
            left: 50%;
            transform: translateX(-50%);
            background: #58a4b0;
            border: none;
            border-radius: 5px;
            padding: 10px;
            color: white;
            width: 85%;
            font-family: "Noto Sans", sans-serif;
            font-size: 14px;
            cursor: pointer; }

        .social-signin {
            text-align: center; }
        .social-signin button {
            width: 40%;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            padding: 10px; }
        .social-signin button i {
            font-size: 20px;
            color: white; }
        .social-signin button.fb {
            background: #3A5A98;
            margin-right: 13px; }
        .social-signin button.tw {
            background: #55ACEE; }

        .bringitback {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translateX(-50%);
            background: #58a4b0;
            border: none;
            border-radius: 5px;
            padding: 10px;
            color: white;
            width: 200px;
            font-family: "Noto Sans", sans-serif;
            font-size: 14px;
            cursor: pointer; }

        .logo {
            text-align: center;
            color: white; }
        .logo i {
            display: block;
            padding: 20px 0 0 0;
            font-size: 70px;
            transform: translateX(-5px); }
        .logo span {
            color: rgba(255, 255, 255, 0.7);
            text-transform: uppercase; }

        .animation-enter {
            opacity: .01; }
        .animation-enter.animation-enter-active {
            opacity: 1;
            transition: opacity .6s ease, margin .5s ease; }

        .animation-leave {
            margin-top: 0px;
            opacity: 1; }
        .animation-leave.animation-leave-active {
            margin-top: -30px;
            opacity: .01;
            transition: opacity .2s ease; }

        .animation-appear {
            opacity: 0.01; }

        .animation-appear.animation-appear-active {
            opacity: 1;
            transition: opacity .5s ease-in; }
        .logo>img{width: 150px; margin-top: 20px; margin-bottom: 20px;}
        .Input{display: flex; justify-content: left;}
        input{width: 100%;}
        .Modal{padding-left: 20px; padding-right: 20px;}

.error{color: red; margin-top: 10px;font-weight: bold;}
    </style>

    <div class="Modal">
        <div class="logo">
            <img src="{{ asset('img/siluetaazul.png') }}" alt="Ticket"/>
            <br>
                <span><b>Login, incidencias</b></span>
        </div>
        <form action="{{ path('login') }}" method="post">
            <div class="Input">

                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="usuario"/>
                <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    </svg>
                </label>
            </div>
            <div class="Input">

                <input type="password" id="password" name="_password" placeholder="password"/>
                <label>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                    </svg>
                </label>
            </div>
            <div class="error">{{ error }}</div>
            <button type="submit">login</button>
        </form>
        <hr>
            <p>Si a√∫n no tiene una cuenta registrese</p>
            <a style="color: white; font-size: 20px;" href="{{path('app_register')}}"><b>Registrarse</b></a>
    </div>

{% endblock %}
