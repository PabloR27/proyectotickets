{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>{{ activo.nombre |capitalize}}</h1>
        <p>{{ activo.descripcion }}</p>
        {% if is_granted('ROLE_TECNICO') %}
            <h2>Historial de incidencias</h2>

            <table>
                <tr>
                    <th>Titulo</th>
                    <th>Tipo</th>
                    <th>Fecha</th>
                    <th>Más detalles</th>
                </tr>
                
                {% for incidencia in incidencias%}
                    <tr>
                        <td>{{ incidencia.titulo |capitalize }}</td>
                        <td>{{ incidencia.tipo |capitalize }}</td>
                        <td>{{ incidencia.fecha |format_datetime('short') }}</td>
                        <td><a href="{{path('detalleincidencia', {'id':incidencia.id})}}">Incidencia Nº{{ incidencia.id }}</a></p>

                    <tr>
                    {% endfor%}
            </table>
        {% endif %}
    </div>
{% endblock %}
