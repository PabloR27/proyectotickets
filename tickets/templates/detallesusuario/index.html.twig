            <input type="email" id="email" name="email" value="{{ usuario.email }}"/>
            <!--
            <label for="iamgen">Imagen de perfil:</label>
            <input type="file" id="imagen" name="imagen"/>
            -->
            <a id="cambiarContrasena" href="{{path('app_forgot_password_request')}}">Cambiar contrase√±a</a>
            <button type="submit">Cambiar datos</button>            
        </form>
    </div>
<script src="{{ asset('js/comprobacionEditarUsuario.js') }}"></script>

{% endblock %}
