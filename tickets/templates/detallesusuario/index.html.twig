    </style>
    
    <div class="centrarDiv">
        <img id="imagenPerfil" src= {%if usuario.imageName != null %} "{{ vich_uploader_asset(usuario, 'imageFile') }}" {% else %} "/images/products/siluetaazul.png" {% endif %} alt="{{ usuario.imageName }}">
        <form action="{{ path('cambiardatosusuario') }}" method="post">
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="username" value="{{ usuario.usuario }}"/>
